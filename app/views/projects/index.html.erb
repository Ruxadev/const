<h1>Projects</h1>

<%= link_to 'New Project', new_project_path, class: 'btn btn-secondary' %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td>
          <div class="d-flex justify">
          <%= link_to 'Show', project_path(project), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-sm btn-outline-primary' %>
          <%= button_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
