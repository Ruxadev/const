<!DOCTYPE html>
<html>
  <head>
    <title>Const</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "bootstrap_import", "data-turbo-track": "reload" %>
  </head>

  <body>
  <%= javascript_importmap_tags %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <%= javascript_include_tag "bootstrap", "data-turbo-track": "reload", defer: true %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to root_path, class: "navbar-brand" do %>
         <img src="<%= asset_path('favicon.ico') %>" alt="Favicon" style="width: 50px; height: 50px; margin-right: 5px;">
          <span style="vertical-align: middle; line-height: 50px; font-size: 32px; font-weight: bold;">Construction Financial Sheet</span>
         <img src="<%= asset_path('favicon.ico') %>" alt="Favicon" style="width: 50px; height: 50px; margin-left: 5px;">
        <% end %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="login-container text-center"></div>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Projects", projects_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                  <%= button_to "Sign out", sign_out_path, method: :delete, style: "text-align: center; padding-top: 6px; vertical-align: middle;" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4" style="text-align: left;">
      <img src="<%= asset_path('page1.jpg') %>" alt="Page 1 Image" style="width: 100%; height: 200px; float: left; margin: 0px 20px 0px 0px;">
      <%= yield %>
    </div>
  </body>
</html>